<div x-data="{ activeTab: 0 }" class="flex items-start w-full order-3">
<div class="tabs flex flex-wrap flex-col md:flex-row w-full">
    <div @click="activeTab = 0"
    :class="{'active': activeTab === 0}" class="label h-11 w-full md:w-1/2 py-3 px-5 flex justify-center items-center gap-3 uppercase font-bold">
    {% render 'icon', icon: 'info-circle', class: '!h-4 !w-4' %}
    <span>
      Description
    </span>
  </div>
  <div class="tab">
    <div class="product__description rte quick-add-hidden pt-9 block border-b border-gray-800 pb-10" {{ block.shopify_attributes }}>
      {{ product.description }}
    </div>
  </div>
  <div
  @click="activeTab = 1"
   :class="{'active': activeTab === 1}" class="label h-11 w-full md:w-1/2 py-3 px-5 flex justify-center items-center gap-3 uppercase font-bold">
    {% render 'icon', icon: 'list', class: '!h-4 !w-4' %}
    <span>
      Specifications
    </span>
  </div>
  <div class="tab">
    <div class="product__description rte quick-add-hidden pt-9 block border-b border-gray-800 pb-10" {{ block.shopify_attributes }}>
    <h3>Specifications</h3>
     <ul class="list-none flex flex-col gap-2 !pl-0">
      {% for metafield in product.selected_or_first_available_variant.metafields.specification %}
        {% assign key = metafield[0] | replace: '_',' ' | upcase %}
        {% assign name = metafield[1] %}
          <li class="bg-gray-100 p-3.5 flex justify-between items-center text-sm">
            <span class="font-bold">{{ key }}</span>
            <span>{{ name }}</span>
          </li>
      {% endfor %}
    </ul>
    </div>
  </div>
</div>
</div>

